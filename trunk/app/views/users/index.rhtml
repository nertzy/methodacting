<h2>Users</h2>

<ul>
  <% for user in @users %>
    <li>
      <%= link_to h(user.name), user_path(user) %>
      <%= link_to '(edit)', edit_user_path(user) %>
      <%= link_to '(destroy)', user_path(user), :confirm => 'Are you sure?', :method => :delete %>
    </li>
  <% end %>
</ul>

<%= link_to 'New user', new_user_path %>